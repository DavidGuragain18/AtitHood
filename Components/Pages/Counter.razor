@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<style>
 .my-gif {
    width: 400px;
    height: auto;
 }
 .Win{
    display: flex;
    justify-content: space-between;
 }
</style>


<div class = "Win">
<div class="Click">
<h2>Counter</h2>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Increment</button>

<h2>Counter decrement</h2>


<button class="btn btn-primary" @onclick="DecrementCount">Decrement</button>
</div>
@if (currentCount > 50)
{
    <img src="image/Animation - 1723973325160.gif" alt="Example GIF" class="my-gif"/>
}
</div>
<br>

<ul>
    @foreach (var item in items)
    {
        <li style="color:red">@item.Name</li>
    }
</ul>

@code {
    private int currentCount = 0;
 private record Person(int PersonId, string Name, DateOnly PromotionDate);

    private List<Person> items = new List<Person>
    {
        new Person(10895, "Jean Martin", new DateOnly(1985, 3, 16)),
        new Person(10944, "António Langa", new DateOnly(1991, 12, 1)),
        new Person(11203, "Julie Smith", new DateOnly(1958, 10, 10)),
        new Person(11205, "Nur Sari", new DateOnly(1922, 4, 27)),
        new Person(11898, "Jose Hernandez", new DateOnly(2011, 5, 3)),
        new Person(12130, "Kenji Sato", new DateOnly(2004, 1, 9)),
    };
    [Parameter]
    public int IncrementAmount { get; set; } = 1;


    [Parameter]
    public int DecrementAmount { get; set; } = 1;

    private void DecrementCount()
    {
        currentCount -= DecrementAmount;
    }
     private void IncrementCount()
    {
        currentCount += IncrementAmount;
    }
     
}




