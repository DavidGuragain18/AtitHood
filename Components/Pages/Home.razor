<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">

<style>
     body {
        font-family: 'Roboto', sans-serif;
        margin: 0;
        padding: 0;
        background color: #001f53;
        background-size: cover;
    }

    .header {
        z-index: 100;
        position: sticky;
        top: 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #ffffff;
        color: #001f53;
        padding: 15px 20px;
        box-shadow: 0 4px 2px -2px gray;
    }

    .header img {
        height: 30px;
        width: auto;
        margin-left: 20px;
    }

    .nav-menu {
        display: flex;
        gap: 20px;
    }

    .nav-button {
        background: none;
        border: none;
        color: # #D9D9D9;
        font-size: 16px;
        cursor: pointer;
        text-decoration: none;
        padding: 10px;
    }

    .nav-button:hover {
        background-color: #b0afaf;
        border-radius: 5px;
    }

    .notification {
        position: relative;
    }

    .notification-icon {
        background: none;
        border: none;
        color: #001f53;
        font-size: 16px;
        cursor: pointer;
        padding: 10px;
    }

    .notification-icon:hover {
        background-color: #b0afaf;
        border-radius: 5px;
    }

    .notification-badge {
        position: absolute;
        top: -10px;
        right: -10px;
        background-color: red;
        color: #001f53;
        border-radius: 50%;
        width: 20px;
        height: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 12px;
    }

     .hero {
        position: sticky;
        top: -999px;
        background-color: #001f53;
        background-size: cover;
        color: white;
        padding: 100px 20px;
        text-align: center;
    }

    .hero h2 {
        font-size: 3rem;
        margin: 0;
    }

    .hero p {
        font-size: 1.25rem;
        margin: 20px 0;
    }

    .content {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 50px 20px;
        background-color: #fff;
    }

    .content-section {
        max-width: 800px;
        text-align: center;
        margin-bottom: 40px;
    }

    .content-section h3 {
        font-size: 2rem;
        margin-bottom: 20px;
    }

    .content-section p {
        font-size: 1.125rem;
        color: #555;
    }

    .footer {
        background-color: #333;
        color: white;
        text-align: center;
        padding: 20px 0;
        position: relative;
        bottom: 0;
        width: 100%;
    }

    .footer p {
        margin: 0;
        font-size: 1rem;
    }

    .button-primary {
        background-color: #D9D9D9;
        color: #001f53;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-size: 1rem;
        cursor: pointer;
        text-align: center;
        text-decoration: none;
    }

    .button-primary:hover {
        background-color: #b0afaf;
    }
</style>

<div class="header">
